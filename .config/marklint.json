{
  "$schema": "../schemas/config.json",
  "include": [
    "*.html",
    "*.htm"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "rules": {
    "alt-require": {
      "severity": "error",
      "options": []
    },
    "attr-lowercase": {
      "severity": "error",
      "options": {
        "ignore": ["viewBox"]
      }
    },
    "attr-no-duplication": {
      "severity": "error",
      "options": {
        "ignore": []
      }
    },
    "attr-value-not-empty": {
      "severity": "error",
      "options": {
        "ignore": ["disabled"]
      }
    },
    "inline-style-disabled": {
      "severity": "error"
    },
    "no-unclosed-tag": {
      "severity": "error",
      "options": []
    },
    "attr-format": {
      "severity": "error",
      "options": {}
    },
    "attr-closing-bracket": {
      "severity": "error",
      "options": ["eol", 0, 4]
    },
    "no-void-tag-close": {
      "severity": "warning",
      "options": [true]
    },
    "no-flow-tag-close": {
      "severity": "warning",
      "options": [true]
    },
    "tag-indent": {
      "severity": "warning",
      "options": {}
    },
    "comment-format": {
      "severity": "warning",
      "options": {}
    }
  }
}
