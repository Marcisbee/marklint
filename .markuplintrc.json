{
  "parserOptions": {
    "sourceType": "html"
  },
  "extends": [
    "./node_modules/coding-standard/markuplintDefaults.json",
    "./node_modules/coding-standard/.markuplintrc-vue",
    "./node_modules/coding-standard/.markuplintrc-angular"
  ],
  "rules": {
    "no-unclosed-tag": ["error", "always"],

    "indent": [
      "error",
      2,
      {
        "outerIIFEBody": 0
      }
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "off",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],

    "comma-dangle": [
      "error",
      "always"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],

    "no-console": "off"
  },
  "noInlineConfig": true
}